<h1>cocktails#new</h1>
<div class="container">
  <div class="row">
    <div class="text-center">

<%= bootstrap_form_for(@cocktail, html: { multipart: true }, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-5") do |f| %>
  <%= f.text_field :name %>
  <p>
    <%= f.label :picture %>
    <%= f.file_field :picture %>
  </p>
  <%= f.submit "Create Cocktail", class: "btn btn-success" %>
<% end %>
</div>
</div>
</div>