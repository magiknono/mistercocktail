<h1>cocktails#show</h1>
<div class="container">
  <div class="row">
    <div class="text-center">
<p><%= @cocktail.name %></p>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= "#{dose.amount} #{dose.ingredient.name}" %></li>
  <% end %>
</ul>

<%= link_to 'Ajouter un ingredient', new_cocktail_dose_path(@cocktail)  %>
<button class="btn btn-success"><%= link_to "Cocktails", cocktails_path %></button>
</div>
</div>
</div>